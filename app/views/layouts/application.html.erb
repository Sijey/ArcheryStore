<!DOCTYPE html>
<html>
<head>
  <title>ArcheryStore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
	<div class="container">

	<p style="color: red;"><%= flash[:error] %></p>
	<p style="color: green;"><%= flash[:success] %></p> 
<%= render 'shared/navbar' %>
	</div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.lina_items.empty?, id: 'cart') do %>

          <%= render @cart %>

      <% end %>
      <% end %>

      <% if session[:admin_id] %>
        <ul>
          <li><%= link_to 'Заказы', orders_path %></li>
          <li><%= link_to 'Товары', products_path %></li>
          <li><%= link_to 'Администраторы', admins_path %></li>
        </ul>
        <%= button_to 'Выйти', logout_path, method: :delete %>
        <% end %>
      
    </div>
    <div id="main">
<%= yield %>
</div>

</body>
</html>
