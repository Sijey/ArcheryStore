- if notice
	%p#notice= notice
%h1= t('.title')
- cache ['store', Product.latest] do
	- @products.each do |product|
		- cache ['entry', product] do
			.entry
				%div.img
					= image_tag product.attachment
				%div.desc
					%h3= product.name
					%p= sanitize(product.description)
					.price_line
						%span.price= number_to_currency(product.price)
						= button_to t('.add'), lina_items_path(product_id: product), method: :post, remote: true