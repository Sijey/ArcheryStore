- unless cart.lina_items.empty?
	%h2= t('.title')
	%table
		=render(cart.lina_items)
		%tr.total_line
			%td{:colspan => "2"} Total
			%td.total_cell= number_to_currency(cart.total_price)
	%p= button_to t('.checkout'), new_order_path, method: :get
	= button_to t('.empty'), @cart, method: :delete, data: { confirm: 'Are you sure' }